<%= link_to 'Create a movie list', new_list_path %>
<% @lists.each do |list| %>
  <%= link_to list_path(list) do  %>
    <div class="card-category my-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/J39X2xX_8CQ)">
      <%= list.name %>
    </div>
  <% end %>
  
<% end %>
