<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/Lq6rcifGjOU);">
  <div class="container">
    <h1>My lists</h1>
  </div>
</div>
<%= link_to 'Create a movie list', new_list_path %>
<div class="cards">
  <% @lists.each do |list| %>
    <%= link_to list_path(list) do  %>
      <div class="card-category my-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>);">
        <%= list.name %>
      </div>
    <% end %>
  <% end %>
</div>
